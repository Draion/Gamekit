<NodeTreeDef xmlns="http://tempuri.org/NodeDef.xsd">

    <Node typename="MouseMotion" groupname="Inputs" size="120,177" color="BlueGreen">
        <DocString docs="Operates on motion events generated by the system mouse."/>
        <Socket type="Float"    name="ScaleX" direction="In"    rect="-14, 139, 14, 14" default="1.0"   color="Blue">
            <DocString docs="Scale the mouse X coordinate."/>
        </Socket>
        <Socket type="Float"    name="ScaleY" direction="In"    rect="-14, 158, 14, 14" default="1.0"   color="Blue">
            <DocString docs="Scale the mouse Y coordinate."/>
        </Socket>
        <Socket type="Boolean"  name="Motion" direction="Out"   rect="120, 25,  14, 14" default="false" color="Orange"  />
        <Socket type="Float"    name="RelX"   direction="Out"   rect="120, 44,  14, 14" default="0.0"   color="Blue"    />
        <Socket type="Float"    name="RelY"   direction="Out"   rect="120, 63,  14, 14" default="0.0"   color="Blue"    />
        <Socket type="Float"    name="AbsX"   direction="Out"   rect="120, 82,  14, 14" default="0.0"   color="Blue"    />
        <Socket type="Float"    name="AbsY"   direction="Out"   rect="120, 101, 14, 14" default="0.0"   color="Blue"    />
        <Socket type="Float"    name="Wheel"  direction="Out"   rect="120, 120, 14, 14" default="0.0"   color="Blue"    />
    </Node>

    
    <Node typename="Motion" groupname="Outputs" size="120,120" color="Orange">
        <DocString docs="Applies motion types to a game body. "/>

        <Properties>
            <Enum name="Motion Type" 
                  docs="Type of motion to apply to this game body.">
                <EnumItem name="Rotation"/>
                <EnumItem name="Translation"/>
                <EnumItem name="Scale"/>
                <EnumItem name="Force"/>
                <EnumItem name="Torque"/>
                <EnumItem name="Linear Velocity"/>
                <EnumItem name="Angular Velocity"/>
            </Enum>
            <Variable type="Boolean" name="Keep Velocity" default="false" docs="Keep physics velocity on unlinked sockets. "/>
            <Variable type="Vector2" name="Clamp X" default="0;0" docs="Clamp motion [min,max]"/>
            <Variable type="Vector2" name="Clamp Y" default="0;0" docs="Clamp motion [min,max]"/>
            <Variable type="Vector2" name="Clamp Z" default="0;0" docs="Clamp motion [min,max]"/>
        </Properties>

        <Socket type="Boolean" name="Update" direction="In"  rect="-14, 25,  14, 14" default="false" color="Orange" >
            <DocString docs="Apply motion state."/>
        </Socket>
        <Socket type="Float" name="X" direction="In"  rect="-14, 44,  14, 14" default="0.0"   color="Blue">
            <DocString docs="Value applied to the X axis"/>
        </Socket>
        <Socket type="Float" name="Y" direction="In"  rect="-14, 63,  14, 14" default="0.0"   color="Blue">
            <DocString docs="Value applied to the Y axis"/>
        </Socket>
        <Socket type="Float" name="Z" direction="In"  rect="-14, 82,  14, 14" default="0.0"   color="Blue">
            <DocString docs="Value applied to the Z axis"/>
        </Socket>
        <Socket type="Float" name="Damping"  direction="In"  rect="-14, 101, 14, 14" default="0.0"   color="Blue">
            <DocString docs="Scale value applied to all motion vectors. Clamped within the range of [0, 1], zero being no damping applied."/>
        </Socket>
    </Node>


</NodeTreeDef>
